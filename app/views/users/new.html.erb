<% provide(:title, 'Sign up') %>
<h3>&nbsp;</h3>
<h1>Sign up</h1>
<div class="row">
  <div class="span6 offset3">
    <div class="center hero-unit">
      <%= form_for(@user) do |f| %>
        <%= render 'fields', f: f %>
        <%= f.submit "Create my account", class: "btn btn-large btn-primary form-label" %>
      <% end %>
    </div>
  </div>
</div>
